<form class="reg-form">
  <div class="reg-form-icons">
    <h4>Register for an account</h4>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-user"></i>
      </span>
      <input class="input-group-field" type="text" placeholder="First name" id="firstName-signup">
    </div>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fas fa-user"></i>
      </span>
      <input class="input-group-field" type="text" placeholder="username" id="username-signup">
    </div>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <input class="input-group-field" type="text" placeholder="Password" id="password-signup">
    </div>
  </div>

  <button class="button expanded signup-form">Sign Up</button>
</form>